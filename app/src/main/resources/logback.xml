<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="jodoi.mybatislogback.MyBatisExceptionFilter" />
        <encoder>
            <pattern>
                %-4relative [%thread] %-5level %logger{30} -%kvp -%msg%n
            </pattern>
        </encoder>
    </appender>
    <root>
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
